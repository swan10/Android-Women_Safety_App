<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#B2DFDB"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/name_log"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_button"
        android:drawableStart="@drawable/ic_person"
        android:ems="10"
        android:hint="  Name"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:maxLength="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.101" />

    <EditText
        android:id="@+id/pwd_log"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/pwd"
        android:ems="10"
        android:hint="  Password"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:paddingRight="35dp"
        android:layout_margin="10dp"
        android:maxLength="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_log"
        app:layout_constraintVertical_bias="0.057" />

    <Button
        android:id="@+id/button_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="Sign In"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwd_log"
        app:layout_constraintVertical_bias="0.052" />

    <ImageView
        android:id="@+id/button_logg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_button"
        android:padding="3dp"
        android:src="@drawable/google"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.326"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_log"
        app:layout_constraintVertical_bias="0.268" />

    <ImageView
        android:id="@+id/button_logt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_button"
        android:src="@drawable/twitter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toEndOf="@+id/button_logf"
        app:layout_constraintTop_toBottomOf="@+id/button_log"
        app:layout_constraintVertical_bias="0.268" />

    <ImageView
        android:id="@+id/button_logf"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:src="@drawable/facebook"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toEndOf="@+id/button_logg"
        app:layout_constraintTop_toBottomOf="@+id/button_log"
        app:layout_constraintVertical_bias="0.268" />

    <TextView
        android:id="@+id/textView_logr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an Account? Create one.."
        android:textColorHint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_logf"
        app:layout_constraintVertical_bias="0.183" />

    <TextView
        android:id="@+id/textView_logsk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use as a Guest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_logr"
        app:layout_constraintVertical_bias="0.289" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="175dp"
        android:layout_height="175dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.14"
        app:srcCompat="@drawable/woman" />
</androidx.constraintlayout.widget.ConstraintLayout>